{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "helpers:pinGitHubActionDigests"
    ],
    "nvm": {
        "enabled": false
    },
    "packageRules": [
        {
            "matchPackageNames": [
                "npm"
            ],
            "allowedVersions": "^8"
        },
        {
            "matchPackageNames": [
                "@types/node"
            ],
            "allowedVersions": "^20"
        },
        {
            "matchManagers": ["github-actions"],
            "groupName": "github actions",
            "groupSlug": "github-actions"
        }
    ]
}
