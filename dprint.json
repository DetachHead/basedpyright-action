{
    "indentWidth": 4,
    "lineWidth": 120,
    "newLineKind": "auto",
    "useTabs": false,
    "typescript": {
        "quoteStyle": "preferDouble",
        "semiColons": "always",
        "arrowFunction.useParentheses": "force"
    },
    "json": {
        "trailingCommas": "never"
    },
    "markdown": {
        "textWrap": "always",
        "lineWidth": 80
    },
    "prettier": {
        "associations": [
            "**/*.{yaml,yml}"
        ],
        "yml.tabWidth": 2,
        "yaml.tabWidth": 2,
        "yml.singleQuote": true,
        "yaml.singleQuote": true
    },
    "excludes": [
        "**/node_modules",
        "**/*-lock.json",
        "dist/**",
        "coverage/**"
    ],
    "plugins": [
        "https://plugins.dprint.dev/typescript-0.88.9.wasm",
        "https://plugins.dprint.dev/json-0.19.1.wasm",
        "https://plugins.dprint.dev/markdown-0.16.3.wasm",
        "https://plugins.dprint.dev/prettier-0.34.0.json@637611b35f5815edf865bd677927159fae0a3f00db5142c840b4ff430a787286"
    ]
}
